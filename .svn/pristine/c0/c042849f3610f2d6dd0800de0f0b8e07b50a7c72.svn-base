<div class="pageContent" layouth="20" style="height:overflow: auto;">
	<form method="post" action="/admin/news_save"
		class="pageForm required-validate"
		onsubmit="return validateCallback(this,navTabAjaxDone)">
		<div class="pageFormContent">
				<dl class="nowrap">
					<dt>文章标题:</dt>
					<dd>
					<input name="navTabId" type="hidden" value="${(navTabId)!}"/>
					<input name="id" type="hidden" value="${(id)!}"/>
					<input name="title" class="required" type="text" size="120" value="智行公交" alt="请输入文章标题"/></dd>
				</dl>
				<dl class="nowrap">
					<dt >文章类型:</dt>
					<dd>
					${(type_option)!}
					</dd>
				</dl>
				<dl class="nowrap">
					<dt >通知级别:</dt>
					<dd>
						${(level)!}
					</dd>
				</dl>
				<dl class="nowrap">
					<dt >是否允许评论:</dt>
					<dd>
						<select name ="isComment">
							<option value="0">不允许</option>
							<option value="1">允许</option>
						</select>
					</dd>
				</dl>
				<dl class="nowrap">
					<dt>摘要:</dt>
					<dd><input name="summary" class="required" size="120"></input></dd>
				</dl>
				<dl class="nowrap">
					<dt >文章缩略图:</dt>
					<dt>
					<img alt="文章缩略图" src="${(headImg)!}" id="headImgshow" style="width: 100px;height: 100px">
					<input type="hidden" name="headImg" class="required" value="${(headImg)!}" id="headImg">
					</dt>
					<dd>
					<input id="testFileInput" type="file"
						uploaderOption="{
							swf:'../resources/framework/dwz_jui/uploadify/scripts/uploadify.swf',
							uploader:'../upload/uploadFileThumbnail?id=${(id)!}',
							buttonText:'请选择文件',
							fileSizeLimit:'5000KB',
							fileTypeDesc:'*.jpg;*.jpeg;*.gif;*.png;',
							fileTypeExts:'*.jpg;*.jpeg;*.gif;*.png;',
							fileObjName:'thumbnail',
							auto:true,
							multi:false,
							queueID:'apkname',
							onUploadSuccess:function(file,data,response){
							$('#headImg').val(data);
							$('#headImgshow').attr('src',data);
							}
						}"
					/>
					</dd>
				</dl>
			<fieldset>
			<legend>文章内容</legend>
			<div class="unit">
				<textarea class="editor" name="content" rows="10" cols="130"
						upLinkUrl="/upload/uploadNewsFile?id=${(id)!}" upLinkExt="zip,rar,txt"
						upImgUrl="/upload/uploadNewsFile?id=${(id)!}" upImgExt="jpg,jpeg,gif,png"
						upFlashUrl="/upload/uploadNewsFile?id=${(id)!}" upFlashExt="swf"
						upMediaUrl="/upload/uploadNewsFile?id=${(id)!}" upMediaExt="avi">
				</textarea>
			</div>
		</fieldset>
		</div>
			
		<div class="formBar">
			<ul>
				<li><div class="buttonActive">
						<div class="buttonContent">
							<button type="submit">保存</button>
						</div>
					</div></li>
				<li><div class="button">
						<div class="buttonContent">
							<button type="button" class="close">取消</button>
						</div>
					</div></li>
			</ul>
		</div>
	</form>
</div>